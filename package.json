{
  "author": {
    "email": "bri_lvi@icloud.com",
    "name": "chlbri",
    "url": "https://bemedev.vercel.app"
  },
  "bin": {
    "build-tests": "lib/cli/index.js"
  },
  "contributors": [
    {
      "email": "bri_lvi@icloud.com",
      "name": "chlbri",
      "url": "https://bemedev.vercel.app"
    }
  ],
  "dependencies": {
    "@bemedev/types": "^0.4.2",
    "cmd-ts": "^0.13.0",
    "edit-json-file": "^1.8.1",
    "shelljs": "^0.10.0",
    "sort-keys": "^5.1.0"
  },
  "description": "Une bibliothèque pour construire et tester des packages Node.js avec des commandes CLI pour automatiser les processus de pré-test, test et post-test.",
  "devDependencies": {
    "@bemedev/cli-test": "^0.1.6",
    "@bemedev/vitest-alias": "^0.0.3",
    "@bemedev/vitest-exclude": "^0.1.1",
    "@bemedev/vitest-extended": "^1.3.6",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@push-based/node-cli-testing": "^0.2.3",
    "@types/edit-json-file": "^1.7.3",
    "@types/node": "^24.3.0",
    "@types/shelljs": "^0.8.17",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "is-in-ci": "^1.0.0",
    "onchange": "^7.1.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rollup": "^4.46.2",
    "rollup-plugin-node-externals": "^8.0.1",
    "rollup-plugin-tsc-alias": "^1.1.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "default": "./lib/index.js",
      "import": "./lib/index.js",
      "node": "./lib/index.cjs",
      "require": "./lib/index.cjs",
      "types": "./lib/index.d.ts"
    },
    "./*": {
      "default": "./lib/*.js",
      "import": "./lib/*.js",
      "node": "./lib/*.cjs",
      "require": "./lib/*.cjs",
      "types": "./lib/*.d.ts"
    },
    "./cli/*": {
      "default": "./lib/cli/*.js",
      "import": "./lib/cli/*.js",
      "node": "./lib/cli/*.cjs",
      "require": "./lib/cli/*.cjs",
      "types": "./lib/cli/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "public"
  ],
  "keywords": [
    "build",
    "test",
    "nodejs",
    "cli",
    "automation",
    "package"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "maintainers": [
    {
      "email": "bri_lvi@icloud.com",
      "name": "chlbri",
      "url": "https://bemedev.vercel.app"
    }
  ],
  "module": "lib/index.js",
  "name": "@bemedev/build-tests",
  "peerDependencies": {
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chlbri/build-tests"
  },
  "scripts": {
    "build": "pnpm rm:lib && pnpm run rollup",
    "ci": "pnpm run config:off && pnpm run lint && pnpm run test",
    "ci:admin": "pnpm run rm && pnpm run upgrade && pnpm run config:off && pnpm run lint && pnpm run test",
    "clean": "pnpm run remove && pnpm run config",
    "config": "pnpm install",
    "config:off": "pnpm run config --offline",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "p-q": "pretty-quick",
    "posttest": "pnpm run p-q && pnpm run prettier",
    "prepare": "husky",
    "prepublishOnly": "",
    "pretest": "pnpm run build",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "rinit": "pnpm run rm && pnpm run config",
    "rinit:off": "pnpm run rm && pnpm run config:off",
    "rm": "pnpx rimraf -rf node_modules pnpm-lock.yaml",
    "rm:lib": "pnpx rimraf -rf lib",
    "rollup": "rollup -c",
    "test": "pnpm run test:coverage --no-coverage",
    "test:coverage": "vitest run",
    "upgrade": "pnpm upgrade --latest"
  },
  "type": "module",
  "typings": "lib/index.d.ts",
  "version": "0.1.1"
}
